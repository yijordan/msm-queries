<h1>Director #<%= @the_id %> Details</h1>
<a href="/directors">Go back</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_director.name %>
  </dd>
  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_director.dob %>
  </dd>
  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_director.dob %>
  </dd>
  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_director.image %>" width="300">
  </dd>
  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_director.created_at %>
  </dd>
  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_director.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>

  <% @directors_movies.each do |a_movie| %>
  <tr>
    <td><%= a_movie.id %></td>
    <td><img src="<%= a_movie.image %>" width="250"></td>
    <td><%= a_movie.title %></td>
    <td><%= a_movie.year %></td>
    <td><%= @the_director.name%></td>
    <td><a href="/movies/<%= a_movie.id %>">Show Details</a></td>
  </tr>
  <% end %>

</table>
