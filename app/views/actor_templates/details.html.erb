<h1>Actor #<%= @the_id %> Details</h1>
<a href="/actors">Go back</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>
  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>
  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>
  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_actor.image %>" width="300">
  </dd>
  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_actor.created_at %>
  </dd>
  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_actor.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character name</th>
    <th></th>
  </tr>


  <% @actors_movies.all.each do |a_movie| %>
  
  <tr>
    <td><%= a_movie.title %></td>
    <td><%= a_movie.year %>
    <td><%= Director.where({ :id => a_movie.director_id}).at(0).name%></td>
    <td><%= @roles.name %></td>
    <td><a href="/movies/<%= a_movie.id %>">Show Details</a></td>
  </tr>
  <% end %>

</table>
