<h1>Actor #<%= @the_id %> Details</h1>
<a href="/actors">Go back</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>
  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>
  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>
  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_actor.image %>" width="300">
  </dd>
  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_actor.created_at %>
  </dd>
  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_actor.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character name</th>
    <th></th>
  </tr>


  <% @roles.all.each do |a_role| %>
    <% @acted_in = Movie.where({ :id => a_role.movie_id }).at(0) %>
  <tr>
    <td><%= @acted_in.title %></td>
    <td><%= @acted_in.year %></td>
    <td><%= Director.where({ :id => @acted_in.director_id}).at(0).name%></td>
    <td><%= a_role.name %></td>
    <td><a href="/movies/<%= @acted_in.id %>">Show Details</a></td>
  </tr>
  <% end %>

</table>
